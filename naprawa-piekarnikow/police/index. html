<script>
document.getElementById('orderForm').addEventListener('submit', function(e){
  e.preventDefault();
  const formData = new FormData(this);
  const name = formData.get('name');
  const phone = formData.get('phone');
  const brand = formData.get('brand');
  const address = formData.get('address');
  const problem = formData.get('problem');
  const time = formData.get('time');
  const city = 'Police';
  const service = 'Wyjazdowa naprawa piekarników';
  let message = `🔧 NOWE ZGŁOSZENIE SERWISOWE\n\n`;
  message += `👤 Imię: ${name}\n`;
  message += `📞 Telefon: ${phone}\n`;
  message += `🏙️ Miasto: ${city}\n`;
  message += `📍 Adres: ${address}\n`;
  message += `🔧 Marka i model: ${brand}\n`;
  message += `⚙️ Usługa: ${service}\n`;
  if(problem) message += `❗ Problem: ${problem}\n`;
  if(time) message += `⏰ Termin: ${time}\n`;
  const whatsappURL = `https://wa.me/48721988949?text=${encodeURIComponent(message)}`;
  window.open(whatsappURL,'_blank');
  alert('Dziękujemy za zgłoszenie! Za chwilę zostaniesz przekierowany do WhatsApp.');
});

document.querySelectorAll('a[href^="#"]').forEach(anchor=>{
  anchor.addEventListener('click', function(e){
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if(target) target.scrollIntoView({behavior:'smooth', block:'start'});
  });
});
</script>

